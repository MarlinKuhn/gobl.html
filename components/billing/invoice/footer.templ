func footerPageStyles(ctx context.Context) string {
	return here.Doc(`
        <style type="text/css">
            @page {
                @bottom-left {
                    padding-left: 6mm;
                    padding-top: 2mm;
                    margin-top: 0mm;
                    vertical-align: top;
			        border-top: 1px solid #E5E7EB;
                    content: "` + i18n.T(ctx, "billing.invoice.footer.generator") + `";
                }
                @bottom-right {
                    padding-right: 6mm;
                    padding-top: 2mm;
                    margin-top: 0mm;
                    vertical-align: top;
			        border-top: 1px solid #E5E7EB;
                    content: ` + i18n.T(ctx, "billing.invoice.footer.page") + `;
                }
            }
        </style>
    `)
}
