package invoice

import (
	"github.com/invopop/gobl/pkg/here"
	"github.com/invopop/ctxi18n/i18n"
)

templ footer() {
	<style type="text/css">
        /*
        section.footer {
            background-color: pink;
            position: running(footer);
        }
        @page {
            @bottom {
                content: element(footer);
            }
        }
        */
    </style>
	<section class="footer">
		@templ.Raw(footerPageStyles(ctx))
		//<div>
		//   Page <span class="page-number" /> of <span class="page-total" />.
		//</div>
